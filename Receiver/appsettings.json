{
  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Literate, Serilog.Sinks.Console",
          "restrictedToMinimumLevel": "Debug",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss}] [{Level:u4}] [Process:{ProcessId,3:0}] [Memory:{MemoryUsage}] [Thread:{ThreadId,3:0}] {Message:lj} {NewLine}{Exception}"
        }
      }

    ]
  }
}
